if [ $# -eq 1 ]; then
  echo "Version $1を実行します"
else 
  echo "バージョンを指定してください"
  exit 1
fi

. .env

yarn hasura migrate apply \
  --version "$1" \
  --admin-secret "$HASURA_GRAPHQL_ADMIN_SECRET" \
  --endpoint "https://crack-pheasant-27.hasura.app"

yarn hasura metadata apply \
  --admin-secret "$HASURA_GRAPHQL_ADMIN_SECRET" \
  --endpoint "https://crack-pheasant-27.hasura.app"